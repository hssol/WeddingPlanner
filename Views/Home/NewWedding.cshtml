@using WeddingPlanner.Models
@model Wedding
<h1>Plan Your Wedding</h1> | <a href="/dashboard">Dashboard</a> | <a href="/logout">Log Out</a>
<br>
<form action="/addwedding" method="post">
    <span asp-validation-for="WedderOne"></span>
    <label>Wedder One:</label>
    <input type="text" name="WedderOne"> <br>
    <span asp-validation-for="WedderTwo"></span>
    <label>Wedder Two:</label>
    <input type="text" name="WedderTwo"> <br>
    <span asp-validation-for="Date"></span>
    <label>Date:</label>
    <input asp-for="Date"> <br>
    <span asp-validation-for="Address"></span>
    <label>Wedding Address:</label>
    <input type="text" name="Address"> <br>
    <input asp-for="CreatorId" value="@ViewBag.user.UserId" hidden>
    <button type="submit">Create</button>
</form>
